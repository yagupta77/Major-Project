<% layout("/layouts/boilerplate") %>
<body>
  <h3>All Listings</h3>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of allListings) { %>
      <a href="/listings/<%= listing._id %>" class="listing-links">
        <div class="card-col listing-card">
          <img
            src="<%= listing.image ? listing.image : '/path/to/default/image.jpg' %>"
            class="card-img-top"
            alt="listing_image"
            style="height: 20rem;"
          />
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %> <br></b>
              &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") + ' /night' : 'N/A' %>
            </p>
          </div>
        </div>
      </a>
    <% } %>
  </div>
</body>


